{
	"name": "{{ agave.username }}-{{ app.name }}",
	"version": "{{ app.version }}",
	"executionSystem": "hpc-tacc-maverick-{{ agave.username }}",
	"executionType": "HPC",
	"parallelism": "SERIAL",
    "deploymentPath": "{{ agave.username }}/apps/{{ app.name }}-{{ app.version }}",
    "deploymentSystem": "data-sd2e-projects-users",
	"defaultProcessorsPerNode": 20,
	"defaultNodeCount": 1,
	"defaultQueue": "normal",
	"defaultMemoryPerNode": 256,
	"defaultMaxRunTime": "01:00:00",
	"available":true,
    "checkpointable": false,
	"modules": ["load tacc-singularity/2.3.1"],
	"label": "RNASeq",
	"tags": [
		"RNA-Seq",
		"Aligner",
		"Abundance",
		"docker://index.docker.io/sd2e/rnaseq:0.1.2"
	],
	"helpURI": "http://bioinfo.lifl.fr/RNA/sortmerna/",
	"longDescription": "A tool for running RNA-seq on raw data",
	"shortDescription": "RNA-Seq pipeline",
	"ontology": ["http://sswapmeet.sswap.info/agave/apps/Application"],
	"templatePath": "runner-template.sh",
	"testPath": "tester.sh",
	"inputs": [
		{
			"id": "read1",
			"value": {
				"default": "agave://data-sd2e-community/sample/rnaseq/test/4311028_S61_R1_001.fastq.gz",
				"order": 0,
				"required": true,
				"validator": null,
				"visible": true
			},
			"semantics": {
				"ontology": ["http://sswapmeet.sswap.info/mime/application/X-fastq"],
				"minCardinality": 1,
				"fileTypes": ["raw-0"]
			},
			"details": {
				"description": "",
				"label": "The first read to sort",
				"argument": null,
				"showArgument": false
			}
		},
		{
			"id": "read2",
			"value": {
				"default": "agave://data-sd2e-community/sample/rnaseq/test/4311028_S61_R2_001.fastq.gz",
				"order": 0,
				"required": true,
				"validator": null,
				"visible": true
			},
			"semantics": {
				"ontology": ["http://sswapmeet.sswap.info/mime/application/X-fastq"],
				"minCardinality": 1,
				"fileTypes": ["raw-0"]
			},
			"details": {
				"description": "",
				"label": "The second read to sort",
				"argument": null,
				"showArgument": false
			}
		},
		{
			"id": "filterseqs",
			"value": {
				"default": "agave://data-sd2e-community/reference/rna_databases/rRNA_databases",
				"required": true,
				"type": "string",
				"visible": true
			},
			"details": {
				"description": "",
				"label": "The directory containing the RNA Database and the config file with the parameter to pass to sortmerna",
				"argument": null,
				"showArgument": false
			}
		}
	],
	"parameters":
	[
		{
			"id": "trim",
			"value": {
				"default": true,
				"required": true,
				"type": "bool",
				"visible": true
			}
		},
		{
			"id": "sortmerna",
			"value": {
				"default": true,
				"required": true,
				"type": "bool",
				"visible": true
			}
		},
		{
			"id": "minlen",
			"value": {
				"default": 36,
				"required": true,
				"type": "number",
				"visible": true
			}
		},
		{
			"id": "adaptersfile",
			"value": {
				"default": "TruSeq3-PE.fa:2:30:10",
				"required": true,
				"type": "string",
				"visible": true
			}
		}
	],
	"outputs":
	[
		{
			"id": "sorted",
			"value": {
				"default": "rna_free_reads.fastq",
				"order": 0,
				"required": false,
				"validator": null,
				"visible": true
			},
			"semantics": {
				"ontology": ["http://sswapmeet.sswap.info/mime/application/X-fastq"],
				"minCardinality": 1,
				"fileTypes": ["raw-0"]
			},
			"details": {
				"description": "",
				"label": "Sorted BAM file",
				"argument": null,
				"showArgument": false
			}
		}
	]
}
