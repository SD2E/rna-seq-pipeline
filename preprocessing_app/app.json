{
	"name": "{{ agave.username }}-{{ app.name }}",
	"version": "{{ app.version }}",
	"executionSystem": "{{ app.executionSystem }}",
	"executionType": "HPC",
	"parallelism": "SERIAL",
  	"deploymentPath": "apps/{{ app.name }}-{{ app.version }}",
  	"deploymentSystem": "{{ app.deploymentSystem }}",
	"defaultNodeCount": 1,
	"defaultQueue": "{{ app.defaultQueue }}",
	"defaultMaxRunTime": "12:00:00",
	"available":true,
    "checkpointable": false,
	"modules": ["load tacc-singularity"],
	"label": "RNASeq",
	"tags": [
		"RNA-Seq",
		"Aligner",
		"Abundance",
		"docker://index.docker.io/sd2e/rnaseq:0.1.2"
	],
	"helpURI": "http://bioinfo.lifl.fr/RNA/sortmerna/",
	"longDescription": "A tool for running RNA-seq on raw data",
	"shortDescription": "RNA-Seq pipeline",
	"ontology": ["http://sswapmeet.sswap.info/agave/apps/Application"],
	"templatePath": "runner-template.sh",
	"testPath": "tester.sh",
	"inputs": [
		{
			"id": "read1",
			"value": {
				"default": null,
				"order": 0,
				"required": false,
				"validator": null,
				"visible": true
			},
			"semantics": {
				"ontology": ["http://sswapmeet.sswap.info/mime/application/X-fastq"],
				"minCardinality": 0,
				"fileTypes": ["raw-0"]
			},
			"details": {
				"description": "",
				"label": "The first read to sort",
				"argument": null,
				"showArgument": false
			}
		},
		{
			"id": "read2",
			"value": {
				"default": null,
				"order": 0,
				"required": false,
				"validator": null,
				"visible": true
			},
			"semantics": {
				"ontology": ["http://sswapmeet.sswap.info/mime/application/X-fastq"],
				"minCardinality": 0,
				"fileTypes": ["raw-0"]
			},
			"details": {
				"description": "",
				"label": "The second read to sort",
				"argument": null,
				"showArgument": false
			}
		},
		{
			"id": "filterseqs",
			"value": {
				"default": null,
				"required": false,
				"type": "string",
				"visible": true
			},
			"details": {
				"description": "",
				"label": "The directory containing the RNA Database and the config file with the parameter to pass to sortmerna",
				"argument": null,
				"showArgument": false
			}
		}
	],
	"parameters":
	[
	{
		"id": "path_read1",
		"value": {
			"default": null,
			"required": false,
			"type": "string",
			"visible": true
		}
	},
	{
		"id": "path_read2",
		"value": {
			"default": null,
			"required": false,
			"type": "string",
			"visible": true
		}
	},
		{
			"id": "path_filterseqs",
			"value": {
				"default": "/work/projects/SD2E-Community/prod/data/reference/rna_databases/rRNA_databases",
				"required": false,
				"type": "string",
				"visible": true
			}
		},
		{
			"id": "trim",
			"value": {
				"default": true,
				"required": true,
				"type": "bool",
				"visible": true
			}
		},
		{
			"id": "sortmerna",
			"value": {
				"default": true,
				"required": true,
				"type": "bool",
				"visible": true
			}
		},
		{
			"id": "minlen",
			"value": {
				"default": 36,
				"required": true,
				"type": "number",
				"visible": true
			}
		},
		{
			"id": "adaptersfile",
			"value": {
				"default": "TruSeq3-PE.fa:2:30:10",
				"required": true,
				"type": "string",
				"visible": true
			}
		},
		{
			"id": "multiple_lanes",
			"value": {
				"default": false,
				"required": true,
				"type": "bool",
				"visible": true
			}
		},
		{
			"id": "CONTAINER_IMAGE",
			"value": {
				"default": "{{ docker.organization }}/{{ docker.repo }}:{{ docker.tag }}",
				"description": "Container Image. Do not edit.",
				"type": "string",
				"visible": false,
				"required": true
			}
		}
	],
	"outputs":
	[
		{
			"id": "sorted",
			"value": {
				"default": "rna_free_reads.fastq",
				"order": 0,
				"required": false,
				"validator": null,
				"visible": true
			},
			"semantics": {
				"ontology": ["http://sswapmeet.sswap.info/mime/application/X-fastq"],
				"minCardinality": 1,
				"fileTypes": ["raw-0"]
			},
			"details": {
				"description": "",
				"label": "Sorted BAM file",
				"argument": null,
				"showArgument": false
			}
		}
	]
}
